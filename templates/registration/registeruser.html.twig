{% extends 'homebase.html.twig' %}
{% block title %}{% endblock %}
{% block keywords%}{% endblock %}
{% block description%}{% endblock %}
{% block body %}

	<!--=== page-title-section start ===-->
	<section class="title-hero-bg login-cover-bg" data-stellar-background-ratio="0.2">
		<div class="table-display">
			<div class="login v-align text-center">
				<div class="signup-box">
					<div id="signup-content" class="tab-content">
						<div id="login" class="tab-pane fade in active">
							<!--=== Form ===-->
							<form method="post" class="form login_type text-center">

								{% if app.user %}
								<div class="mb-3">
									You are logged in as
									{{ app.user.username }},
									<a href="{{ path('app_logout') }}">Logout</a>
								</div>

								{% else %}

								<!--=== Username ===-->
								<input type="text" class="form-control mb-20" id="user1_name" name="user1[name]" placeholder="Name" maxlength="50"/>
								<input type="text" class="form-control mb-20" id="user1_surname" name="user1[surname]" placeholder="Second Name" maxlength="20"/>
								<input type="text" class="form-control mb-20" id="user1_email" name="user1[email]" placeholder="Email" required="required" maxlength="180">
								<!--=== Password ===-->
								<input type="password" class="form-control mb-20" id="user1_password" name="user1[password]" placeholder="Password" required="required">
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								<!--=== Submit ===-->
								<button type="submit" name="login" class="btn btn-color btn-circle full-width">REGISTER</button>
								<!--=== Signup Text ===-->
								<h6 class="mt-20 gray-light"> HAVE AN ACCOUNT? </h6>
								<!--=== Signup Button ===-->
								<a href="loginuser">LOGIN <i class="fa fa-angle-double-right"></i> </a>
							</form>
							{% endif %}
							<!--=== End Form ===-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--=== page-title-section end ===-->

{% endblock %}